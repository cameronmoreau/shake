<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Image later"
            android:layout_gravity="center_horizontal"
            android:id="@+id/buttonShake" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.MapFragment"/>

    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@mipmap/cat_hobbies"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/cat_button_height"
            style="@style/CategoryButton"
            android:id="@+id/buttonFood" />

        <ImageButton
            android:src="@mipmap/cat_shopping"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/cat_button_height"
            style="@style/CategoryButton"
            android:id="@+id/buttonEntertainment" />

        <ImageButton
            android:src="@mipmap/cat_dining"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/cat_button_height"
            style="@style/CategoryButton"
            android:id="@+id/buttonSports" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:src="@mipmap/cat_fun"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/cat_button_height"
            style="@style/CategoryButton"
            android:id="@+id/buttonOutdoors" />

        <ImageButton
            android:src="@mipmap/cat_outdoors"
            android:layout_weight="1"
            android:layout_width="0dp"

            android:layout_height="@dimen/cat_button_height"
            style="@style/CategoryButton"
            android:id="@+id/buttonNightlife" />

        <ImageButton
            android:src="@mipmap/cat_sports"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="@dimen/cat_button_height"
            style="@style/CategoryButton"
            android:id="@+id/buttonShopping" />

    </LinearLayout>

</LinearLayout>